{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@Components/*": ["./app/components/*"],
      "@Types/*": ["./app/types/*"],
      "@Styles/*": ["./app/styles/*"],
      "@Assets/*": ["./app/assets/*"],
      "@Configs/*": ["./app/configs/*"],
      "@Utils/*": ["./app/utils/*"],
      "@Services/*": ["./app/services/*"],
      "@Hooks/*": ["./app/hooks/*"],
      "@Routes/*": ["./app/routes/*"],
      "@Context/*": ["./app/context/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
}
